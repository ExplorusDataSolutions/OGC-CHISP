<!DOCTYPE html>
<html>
	<head>
		<title>OGC-CHISP</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<%= stylesheet_link_tag    "application", :media => "all" %>
		<%= javascript_include_tag "application" %>
		<%= csrf_meta_tags %>
	</head>
	<body>
		<div class="navbar navbar-inverse navbar-fixed-top">
			<div class="navbar-inner">
				<div class="container-fluid">
					<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"> <span class="icon-bar"></span> <span class="icon-bar"></span> <span class="icon-bar"></span> </a>
					<a class="brand" href="<%= root_url%>">OGC-CHISP</a>
					<div class="nav-collapse collapse">
						<ul class="nav pull-right">
							<li<%=raw ' class="active"' if params[:controller] == "home"%>>
								<a href="/">Home</a>
							</li>
							<li<%=raw ' class="active"' if params[:controller] == "map"%>>
								<a href="/map">Map</a>
							</li>
							<li<%=raw logined_email.nil? ? ' class="hide"' : '' %>>
								<label class="label"><%= logined_email%></label>
								<button type="submit" class="btn btn-logout">
									Logout
								</button>
							</li>
							<li<%=raw logined_email.nil? ? '' : ' class="hide"' %>>
								<input class="input-mini" type="email" name="email" value="<%= logined_email%>" maxlength="255" placeholder="your@email.com" />
								<button type="submit" class="btn btn-login">
									Login
								</button>
							</li>
						</ul>
					</div><!--/.nav-collapse -->
				</div>
			</div>
		</div>
		<div class="container-fluid">
			<%= yield %>
		</div>
	</body>
</html>
